  <section id="bosa" class="py-24 px-6 bg-slate-50 border-b border-slate-200">
    <div class="max-w-[1200px] mx-auto grid lg:grid-cols-12 gap-16">
      <div class="lg:col-span-4">
        <div class="w-12 h-12 bg-indigo-100 text-indigo-600 rounded-xl flex items-center justify-center text-2xl mb-6">üí∞</div>
