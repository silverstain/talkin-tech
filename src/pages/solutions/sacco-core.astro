<MainLayout title="Sacco Management System (ERP) - End to End">

  <style>
    /* Gradient Text */
    .text-gradient {
      background: linear-gradient(to right, #2563eb, #4f46e5);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    /* Tech Grid */
    .bg-grid {
      background-size: 40px 40px;
      background-image: linear-gradient(to right, rgba(0, 0, 0, 0.05) 1px, transparent 1px),
                        linear-gradient(to bottom, rgba(0, 0, 0, 0.05) 1px, transparent 1px);
    }
    
    /* Smooth Scroll Padding */
    html {
      scroll-padding-top: 100px;
    }
  </style>

  <section class="pt-40 pb-20 px-6 bg-slate-50 bg-grid border-b border-slate-200">
    <div class="max-w-[1200px] mx-auto text-center relative z-10">
      
      <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-slate-900 text-white text-[12px] font-bold uppercase tracking-widest mb-8 shadow-xl">
