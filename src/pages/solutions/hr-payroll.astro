<MainLayout title="HR & Payroll Management System (Enterprise)">

  <style>
    /* Gradient Text */
    .text-gradient {
      background: linear-gradient(to right, #0891b2, #06b6d4);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    .bg-grid {
      background-size: 40px 40px;
      background-image: linear-gradient(to right, rgba(0, 0, 0, 0.05) 1px, transparent 1px),
                        linear-gradient(to bottom, rgba(0, 0, 0, 0.05) 1px, transparent 1px);
    }

    /* Solid Button Styles for better visibility */
    .btn-secondary {
        background-color: white;
        color: #0f172a; /* Slate 900 */
        border: 2px solid #e2e8f0; /* Slate 200 */
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }
    .btn-secondary:hover {
        border-color: #06b6d4; /* Cyan 500 */
        color: #0891b2; /* Cyan 600 */
    }
    
    html { scroll-padding-top: 100px; }
  </style>

  <section class="pt-40 pb-20 px-6 bg-slate-50 bg-grid border-b border-slate-200">
    <div class="max-w-[1200px] mx-auto text-center relative z-10">
      
